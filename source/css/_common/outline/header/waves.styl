.waves {
  width: 100%;
  height: 15vh;
  opacity: 0.8;
  margin-top: 3rem;
  margin-bottom: -3.625rem;
  min-height: 3.125rem;
  max-height: 9.375rem;
  position: relative;
  content-visibility: auto;
  contain-intrinsic-size: 100vw 15vh;

  +mobile() {
    height: 10vh;
    contain-intrinsic-size: 100vw 10vh;
  }
}

/* Animation */
.parallax > use {
  animation: wave 75s linear infinite; /* linear 确保匀速 */
}

use.stop-animation {
  animation-play-state: paused;
}

/* 不同波浪，速度不同，透明度不同 */
.parallax > use:nth-child(1) {
  animation-duration: 21s;
  animation-delay: -6s;
  fill: var(--grey-1-a7);
}

.parallax > use:nth-child(2) {
  animation-duration: 30s;
  animation-delay: -9s;
  fill: var(--grey-1-a5);
}

.parallax > use:nth-child(3) {
  animation-duration: 39s;
  animation-delay: -12s;
  fill: var(--grey-1-a3);
}

.parallax > use:nth-child(4) {
  animation-duration: 60s;
  animation-delay: -15s;
  fill: var(--grey-1);
}


/* 平滑往返关键帧 */
@keyframes wave {
  0%   { transform: translate3d(-90px, 0, 0); }
  50%  { transform: translate3d(90px, 0, 0); }
  100% { transform: translate3d(-90px, 0, 0); }
}
