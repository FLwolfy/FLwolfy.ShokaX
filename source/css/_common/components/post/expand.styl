
@keyframes rainbow {
  to {
    background-position: -2000vw;
  }
}

.md {
  p,
  table,
  pre,
  blockquote,
  img,
  .tabs,
  .links {
    &:last-child {
      margin-bottom: 0;
    }
  }

  ul, dd, ol {
    ul, ol {
      margin-top: 0;
    }
  }

  a {
    color: var(--primary-color); //原始链接颜色

    &:hover {
      color: var(--color-blue); //鼠标经过颜色
    }
  }

  for headline in (1 .. 6) {
    h{headline} {
      font-size: $font-size-headings-base - $font-size-headings-step * headline;
    }
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    position: relative;
    padding-top: .625rem;
    color: var(--text-heading-color);

    &:hover .anchor {
      &::before, &::after {
        color: var(--primary-color);
      }
    }

    +mobile-small() {
      margin-right: .625rem;
    }
  }

  /* ========== 具体标题样式自定义 ========== */

  /* == H1 == */
  h1 {
    color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;

    .anchor::before {
      content: "⚠️" !important;
    }
  }

  h1::before,
  h1::after {
    content: "";
    flex-grow: 1;
    height: 0.75rem;
    opacity: 0.4;
    background: repeating-linear-gradient(
      -45deg,
      var(--primary-color),
      var(--primary-color) 0.5rem,
      transparent 0.5rem,
      transparent 1rem
    );
    background-size: 100% 100%;
  }
  h1::before {
    margin-right: 1rem;
  }
  h1::after {
    margin-left: 1rem;
  }

  /* == H2 == */
  h2 {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  h2::before,
  h2::after {
    content: "";
    flex-grow: 1;
    border-top: 0.125rem solid var(--color-grey);
    opacity: 0.4;
  }
  h2::before {
    margin-right: 1rem;
  }
  h2::after {
    margin-left: 1rem;
  }

  /* == H3 == */
  h3 {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  h3::before,
  h3::after {
    color: var(--color-grey);
    display: inline-block;
    opacity: 0.4;
  }
  h3::before {
    content: "༺";
    margin-right: 0.5rem;
  }
  h3::after {
    content: "༻";
    margin-left: 0.5rem;
  }

  /* == H4 == */
  h4 {
    &::after {
      color: var(--color-grey);
      content: "≻꧂";
      margin-left: 0.25rem;
      opacity: 0.4;
    }
  }

  /* ===================================== */

  .anchor {
    border-bottom-style: none;
    color: var(--grey-4);

    text-align: right;
    position: absolute;
    align-items: center; 
    width: 100%;
    margin-left: .625rem;
    right: 0;
    margin-right: -1.5rem;

    &:hover {
      color: var(--grey-9);
    }
  }

  .anchor::before,
  .anchor::after {
    color: var(--grey-4);
    position: absolute;
    top: 10% !important;
    font-weight: normal;
    margin-left: -2rem;
    the-transition(, ease-out);
  }

  .active .anchor::before,
  .active .anchor::after {
    color: var(--primary-color);
  }

  p {
    margin: 0 0 .8rem;
  }

  blockquote {
    font-size: 90%;
    background-color: var(--grey-2);
    margin: 1.25rem 0;
    border-radius: .1875rem;

    ul {
      margin: .625rem 0 !important;
    }

    ul > li::before {
      width: .375rem !important;
      height: .375rem !important;
      top: .6875rem !important;
    }

    p, ol, ul {
      &:last-child {
        margin-bottom: 0!important;
      }
    }
  }

  >blockquote {
    border-left-color: var(--primary-color);
  }

  iframe {
    margin-bottom: 1.25rem;
  }

  .image-info {
    display: block;
    text-align: center;
    font-size: $font-size-smaller;
    color: var(--grey-4);
  }

  .video-container {
    height: 0;
    margin-bottom: 1.25rem;
    overflow: hidden;
    padding-top: 75%;
    position: relative;
    width: 100%;

    iframe,
    object,
    embed {
      height: 100%;
      left: 0;
      margin: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }
  }

  .kbd, kbd {
    background-color: var(--grey-1);
    background-image: linear-gradient(var(--grey-2), var(--grey-0), var(--grey-2));
    border: .0625rem solid var(--grey-4);
    border-radius: .2rem;
    box-shadow: .1rem .1rem .2rem var(--grey-9-a1);
    font-family: inherit;
    padding: .1rem .3rem;
    white-space: nowrap;
  }

  mark {
    background-color: #dbfdad;
  }

  ins {
    --line-color: var(--note-hover, var(--primary-color));
    text-decoration: none;
    border-bottom: .125rem solid var(--line-color);

    &.wavy {
      text-decoration-style: wavy;
      text-decoration-line: underline;
      text-decoration-color: var(--line-color);
      border-bottom: none;
    }

    &.dot {
      border-bottom: .2rem dotted var(--line-color);
    }
  }

  s {
    color: var(--grey-5);
    text-decoration-color: var(--note-hover, var(--grey-5));
  }

  code {
    background-color: var(--grey-3);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-family: inherit;     // 保持和正文一致，也可以换成等宽字体
    color: inherit;           // 保持文字颜色和正文一致
  }

  img {
    width: auto;
    display: block;
    object-fit: cover;

    background: var(--grey-4);
    border: 0.3rem solid var(--color-grey); /* 单元格线条加粗 */
    padding: 0.7rem 0.7rem;                /* 给点内边距，不会太挤 */

    /* 禁用 hover 遮罩 */
    opacity: 1 !important;
    filter: none !important;
    transition: none !important;
    :hover {
      opacity: 1 !important;
      filter: none !important;
    }
  }

  table {
    width: auto;
    margin-left: auto;  /* 水平居中 */
    margin-right: auto;
    border-collapse: collapse;              /* 合并边框 */
    border: 0.3rem solid var(--color-grey); /* 外框加粗 */

    img {
      min-height: 12rem;
      max-height: 12rem;
      border: 0;
      padding: 0;
    }
  }
  table th,
  table td {
    background: var(--grey-4);
    border: 0.3rem solid var(--color-grey); /* 单元格线条加粗 */
    padding: 0.7rem 0.7rem;                /* 给点内边距，不会太挤 */
  }

  ruby {
    padding: 0 .3125rem;
  }

  .katex-display {
    overflow-x: scroll;
    overflow-y: hidden;
  }

  .spoiler:not(.bulr) {
    background-color: var(--text-color);
    color: var(--text-color);
    text-shadow: none;
    transition: color .3s;
    padding:0 .1875rem;

    &:hover {
      color: #FFF;
    }
  }

  .bulr {
    text-shadow: rgba(0, 0, 0, .7) 0rem 0rem .625rem;
    color: transparent;
  }

  .rainbow {
    background-image: linear-gradient( to left, orangered, orange, gold, lightgreen, cyan, dodgerblue, mediumpurple, hotpink, orangered);
    background-size: 110vw;
    background-clip: text;
    color: transparent;
    animation: rainbow 60s linear infinite;
  }
}


.article .md {

  .anchor {
    +mobile-small() {
      left: .375rem;
    }
  }

  .anchor::before,
  .anchor::after {
    content: "H";
    font-family: $font-family-posts;
    left: -1.875rem;
    top: 1rem;
    width: 1.25rem;
    height: 1.5625rem;
    text-align: right;
    visibility: visible;
    font-size: 80%;

    +mobile-small() {
      left: .375rem;
    }
  }

  .anchor::after {
    font-size: 50%;
    left: -1.375rem;
    line-height: 3;

    +mobile-small() {
      left: .75rem;
    }
  }

  for headline in (1 .. 6) {
    h{headline} .anchor::after {
      content: \"headline\";
    }
  }
}

